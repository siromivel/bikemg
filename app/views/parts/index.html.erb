<%= form_tag('/parts', remote: true) do -%>
  <div id = "accordion">
    <% @target = "frame" %>
    <%= render "part" %>
  
    <% @target = "fork" %>
    <%= render "part" %>
  
    <% @target = "wheelset" %>
    <%= render "part" %>
  
    <% @target = "handlebars" %>
    <%= render "part" %>
  
    <% @target = "stem" %>
    <%= render "part" %>
  
    <% @target = "seat" %>
    <%= render "part" %>
  
    <% @target = "seatpost" %>
    <%= render "part" %>
  
    <% @target = "brakes" %>
    <%= render "part" %>

  </div>
  <div id = "results">0</div>
  <%= submit_tag("Start Over", { :name => 'reset', :id => 'reset_button', :type => "reset" }) %>
<% end %>
<script>
  $(function() {
    $("#accordion").accordion();
  });
</script>